@{
}

@model IEnumerable<string>

<a asp-controller="Home" asp-action="Index", asp-route-bookCategory =""
   asp-route-pageNum ="1" class = "btn btn-block @(ViewBag.SelectedCategory == null ? "btn-primary" : "btn-outline-secondary")">Home</a>

@foreach (string c in Model)
{
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c", asp-route-pageNum="1"
       class = "btn btn-block @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
}
