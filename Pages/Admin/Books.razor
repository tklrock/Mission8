@page "/admin/books"
@page "/admin"
@inherits OwningComponentBase<IMission7Repository>

<table class="table table-sm table-striped table-bordered table-hover">

    <thead class="thead-dark text-white">
        <tr>
            <th>Book ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        @if (BookData?.Count() >0)
        {
            //List the books
            @foreach (Book b in BookData)
            {
                <tr>
                    <td>@b.BookId</td>
                    <td>@b.Title</td>
                    <td>@b.Author</td>
                    <td>@b.Price.ToString("c")</td>

                    <td>
                        <NavLink class="btn btn-info btn-sm" href="@GetDetailsUrl(b.BookId)">Details</NavLink>
                        </td>
                    <td>
                        <NavLink class="btn btn-warning btn-sm" href="@GetEditUrl(b.BookId)">Edit</NavLink>
                        </td>
                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="@(x =>RemoveBook(b))">Delete</button>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Books to Display</td>
            </tr>
        }
    </tbody>

</table>

<NavLink class="btn btn-primary" href="admin/books/create">Create</NavLink>



@code {

    public IMission7Repository repo => Service;
    public IEnumerable<Book> BookData { get; set; }
    protected async override Task OnInitializedAsync()
    {
        await UpdateData();
    }

    public async Task UpdateData()
    {
        BookData = await repo.Books.ToListAsync();
    }

    public string GetDetailsUrl(long id) => $"/admin/books/details/{id}";
    public string GetEditUrl(long id) => $"/admin/books/edit/{id}";

    public async Task RemoveBook (Book b)
    {
        repo.DeleteBook(b);
        await UpdateData();
    }

}
